<%= content_tag(:div, class: "user-description") do %>
    <%= content_tag(:div, class: "user-profile") do %>
        <%= tag.img(src: @user.photo, alt: "User", class: "image-show") %>
        <%= content_tag(:div, class: "user-info") do %>
            <%= content_tag(:h1, @user.name) %>
            <%= content_tag(:h3, "Number of posts: #{@user.posts.count}") %>
        <% end %>
    <% end %>
    <%= content_tag(:div, class: "user-bio") do %>
        <%= content_tag(:h2, "Bio") %>
        <%= content_tag(:p, @user.bio) %>
    <% end %>
    <%= content_tag(:div, class: "user-recent-posts") do %>
        <% @user.three_recent_posts.each do |post| %>
            <%= content_tag(:div, class: "single-post") do %>
                <%= content_tag(:h2, post.title) %>
                <%= link_to "#{@user.id}/posts/#{post.id}" do %>
                    <%= content_tag(:p, post.text) %>
                    <%= content_tag(:div, class: "post-actions") do %>
                        <%= content_tag(:p, "Comments: #{post.comment_counter},", class: "post-comments") %>
                        <%= content_tag(:p, "Likes: #{post.likes_counter}", class: "post-likes") %>
                    <% end %>
                <% end %>
            <% end %>
        <% end %>
        <%= link_to "#{@user.id}/posts/", class: "button" do %>
            See all posts
        <% end %>
    <% end %>
<% end %>
