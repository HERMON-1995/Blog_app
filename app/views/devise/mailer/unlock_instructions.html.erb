<%= content_tag(:p, "Hello #{@resource.email}!") %>

<%= content_tag(:p, "Your account has been locked due to an excessive number of unsuccessful sign-in attempts.") %>

<%= content_tag(:p, "Click the link below to unlock your account:") %>

<%= content_tag(:p) do %>
  <%= link_to 'Unlock my account', unlock_url(@resource, unlock_token: @token) %>
<% end %>
