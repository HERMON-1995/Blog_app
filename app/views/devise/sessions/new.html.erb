<%= content_tag(:div, class: "Log-in") do %>
  <%= content_tag(:h2, "Log in") %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= content_tag(:div, class: "field") do %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "field-input" %>
    <% end %>

    <%= content_tag(:div, class: "field") do %>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "field-input" %>
    <% end %>

    <% if devise_mapping.rememberable? %>
      <%= content_tag(:div, class: "field") do %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "remember-me" %>
      <% end %>
    <% end %>

    <%= content_tag(:div, class: "actions") do %>
      <%= f.submit "Log in", class: "like-button" %>
    <% end %>
  <% end %>
  <%= render "devise/shared/links" %>
<% end %>
